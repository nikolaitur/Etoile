<section class="index-section homepage-section animate wow fadeIn no-fouc" data-section-id="{{ section.id }}" >
  <div class="row">

    <div class="desktop-12 tablet-6 mobile-3">

      {% if section.settings.title != blank %}
      <div class="section-title lines"><h1>{{ section.settings.title | escape }}</h1></div>
      {% endif %}


      <div class="pages-content">
        {% if section.settings.page != blank %}
        {%- assign feat_page = pages[section.settings.page] -%}
        {{ feat_page.content }}
        {% else %}
        <div class="rte">
        {{ section.settings.rich_text }}
        </div>
        {% endif %}

        {% if section.settings.page == blank and section.settings.rich_text == blank %}
        <div class="content-onboard">
          <p>Use this section to tell customers about your store or add content from one of your pages which makes it easy to add images, video or any other content</p>
        </div>
        {% endif %}
      </div>

    </div>
  </div>
</section>


{% schema %}
{
  "name": "Rich text",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Welcome"
    },
      {
        "type": "richtext",
        "id": "rich_text",
        "label": "Text",
        "info": "Use basic HTML to format text"
      },
    {
      "type": "page",
      "id": "page",
	  "label": "Or Show content from a page"
    }
   ],
   "presets":[
      {
       "name":"Rich text",
       "category":"Text"
      }
   ]
}
{% endschema %}
